#1
def check_even(num):
    return num % 2 == 0

def divisible_by_5(num):
    return num % 5 == 0

def divisible_by_7(num):
    return num % 7 == 0

def ends_with_3(num):
    return str(num).endswith('3')

# Пример использования:
num = int(input("Введите число: "))
print("Чётное" if check_even(num) else "Нечётное")
print("Делится на 5" if divisible_by_5(num) else "Не делится на 5")
print("Делится на 7" if divisible_by_7(num) else "Не делится на 7")
print("Оканчивается на 3" if ends_with_3(num) else "Не оканчивается на 3")
#2
def greater(a, b):
    if a == b:
        return "одинаковые"
    return a if a > b else b

def smaller(a, b):
    if a == b:
        return "одинаковые"
    return a if a < b else b


def difference(a, b):
    return abs(a - b)

def equal_or_not(a, b):
    return "равны" if a == b else "не равны"

a = int(input("Введите число a: "))
b = int(input("Введите число b: "))
print("Большее:", greater(a,b))
print("Меньшее:", smaller(a,b))
print("Разница:", difference(a,b))
print("Равны или не равны:", equal_or_not(a,b))
#3
def multiplication_table(n):
    for i in range(1, 11):
        print(f"{n} x {i} = {n * i}")

print("Таблица умножения на 2:")
multiplication_table(2)
print("\nТаблица умножения на 5:")
multiplication_table(5)
num = int(input("\nВведите число для таблицы умножения: "))
print(f"Таблица умножения на {num}:")
multiplication_table(num)
print("\nТаблица умножения на 10:")
multiplication_table(10)
#4
def sum_1_to_10():
    return sum(range(1,11))

def sum_1_to_n(n):
    return sum(range(1,n+1))

def sum_even_1_to_n(n):
    return sum(i for i in range(2,n+1,2))

def sum_odd_1_to_n(n):
    return sum(i for i in range(1,n+1,2))

print("Сумма от 1 до 10:", sum_1_to_10())
N = int(input("Введите N: "))
print("Сумма от 1 до N:", sum_1_to_n(N))
print("Сумма чётных от 1 до N:", sum_even_1_to_n(N))
print("Сумма нечётных от 1 до N:", sum_odd_1_to_n(N))
#5
def square(n):
    return n**2

def cube(n):
    return n**3

def power_n(n, p):
    return n**p

def two_power_n(n):
    return 2**n

num = int(input("Введите число для возведения в степень: "))
print("Квадрат:", square(num))
print("Куб:", cube(num))
p = int(input("Введите степень N: "))
print("Число в степени N:", power_n(num, p))
N = int(input("Введите степень для 2^N: "))
print("2 в степени N:", two_power_n(N))
#6
def is_adult(age):
    return age >= 18

def is_pensioner(age):
    return age >= 65

def in_school_age(age):
    return 7 <= age <= 18

def is_round_decade(age):
    return age % 10 == 0

age = int(input("Введите возраст: "))
print("Совершеннолетний" if is_adult(age) else "Несовершеннолетний")
print("Пенсионер" if is_pensioner(age) else "Не пенсионер")
print("Подходит для школы" if in_school_age(age) else "Не подходит для школы")
print("Возраст - круглый десяток" if is_round_decade(age) else "Возраст не круглый десяток")
#7
def factorial(n):
    if n == 0:
        return 1
    res = 1
    for i in range(1,n+1):
        res *= i
    return res

print("Факториал 3:", factorial(3))
print("Факториал 5:", factorial(5))
N = int(input("Введите число для факториала: "))
print(f"Факториал {N}:", factorial(N))

# Цикл ввода до 0
while True:
    n = int(input("Введите число (0 для выхода): "))
    if n == 0:
        break
    print(f"Факториал {n}:", factorial(n))
#8
# 1. Ввести двузначное число и найти сумму цифр.
num = int(input("Введите двузначное число: "))
sum_digits = num // 10 + num % 10 # // - целочисленное деление, % - остаток от деления
print(f"Сумма цифр: {sum_digits}")

# 2. Ввести двузначное число и найти произведение цифр.
num = int(input("Введите двузначное число: "))
product = (num // 10) * (num % 10)
print(f"Произведение цифр: {product}")

# 3. Ввести трёхзначное число и найти сумму цифр.
num = int(input("Введите трехзначное число: "))
sum_digits = num // 100 + (num // 10) % 10 + num % 10
print(f"Сумма цифр: {sum_digits}")

# 4. Ввести трёхзначное число и вывести первую и последнюю цифры.
num = int(input("Введите трехзначное число: "))
first_digit = num // 100
last_digit = num % 10
print(f"Первая цифра: {first_digit}, последняя цифра: {last_digit}")
#9
def is_digit(char):
    return char.isdigit() # проверяет, цифра ли символ.

def is_letter(char):
    return char.isalpha() # проверяет, буква ли символ

def is_vowel(char):
    return char.lower() in "aeiouаеёиоуыэюя" # проверяем принадлежность к строке гласных для гласных.

def is_uppercase(char):
    return char.isupper() # проверяет, заглавная ли буква

char = input("Введите символ: ")
print("Цифра" if is_digit(char) else "Не цифра")
print("Буква" if is_letter(char) else "Не буква")
print("Гласная" if is_vowel(char) else "Не гласная")
print("Прописная" if is_uppercase(char) else "Не прописная")
#10
# 1
total_sum = 0
while True:
    n = int(input("Введите число (0 для выхода): "))
    if n == 0:
        break
    total_sum += n
print("Сумма введённых чисел:", total_sum)

# 2
count = 0
while True:
    n = int(input("Введите число (отрицательное для выхода): "))
    if n < 0:
        break
    count += 1
print("Количество введённых чисел:", count)

# 3
sum_odds = 0
while True:
    n = int(input("Введите число (чётное для выхода): "))
    if n % 2 == 0:
        break
    sum_odds += n
print("Сумма нечётных чисел:", sum_odds)

# 4
sum_numbers = 0
count = 0
while True:
    n = int(input("Введите число (>100 для выхода): "))
    if n > 100:
        break
    sum_numbers += n
    count += 1
average = sum_numbers / count if count > 0 else 0
print("Среднее арифметическое:", average)
